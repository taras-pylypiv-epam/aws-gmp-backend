{
  "name": "aws-gmp-backend",
  "version": "0.1.0",
  "bin": {
    "aws-gmp-backend": "bin/aws-gmp-backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk:deploy:all": "cdk deploy --all",
    "cdk:deploy:product-service": "cdk deploy ProductServiceStack",
    "cdk:deploy:import-service": "cdk deploy ImportServiceStack",
    "build:assets:all": "npm-run-all --parallel build:lambda:* build:layer:*",
    "build:lambda:get-product": "cd ./assets/lambda-handler/get-product && npm run build",
    "build:lambda:get-product-list": "cd ./assets/lambda-handler/get-product-list && npm run build",
    "build:lambda:catalog-batch-process": "cd ./assets/lambda-handler/catalog-batch-process && npm run build",
    "build:lambda:import-file-parser": "cd ./assets/lambda-handler/import-file-parser && npm run build",
    "build:layer:products": "cd ./assets/layers/products && npm run build",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1020.2",
    "dotenv": "^17.2.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.202.0",
    "constructs": "^10.0.0"
  }
}
